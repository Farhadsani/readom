<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:gravity="center_vertical"
    	android:text="分享到"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="10dp"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/tvShareFriend"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="10dp"
    		android:layout_marginRight="12dp"
    		android:background="@drawable/withcitysharepengyouquanweixuanzhong"/>
        <ImageView 
            android:id="@+id/tvShareWeiBo"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="10dp"
    		android:layout_marginRight="12dp"
    		android:layout_marginLeft="12dp"
    		android:background="@drawable/withcityshareweiboweixuanzhong"/>
        <ImageView 
            android:id="@+id/tvShareQQ"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="10dp"
    		android:layout_marginLeft="12dp"
    		android:background="@drawable/withcityshareqqkongjianweixuanzhong"/>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/rlShareCancel"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:layout_marginBottom="10dp"
    	android:background="@drawable/withcitysharequxiaoweixuanzhong"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20dp" />

    </RelativeLayout>
    

</LinearLayout>