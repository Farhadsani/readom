<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fddc43"
    android:orientation="vertical" >

    <!-- head -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/ivLoginPhoneBack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="15dp"
	        android:background="@drawable/xiangyoubaise" />
    </LinearLayout>
    <!-- <include layout="@layout/top_bar"/> -->
    
    <!-- middle -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="7"
    	android:gravity="center_vertical"
        >
        
        <TableLayout 
            android:layout_width="fill_parent"
   			android:layout_height="match_parent"
   			android:gravity="center_vertical"
            >
            <!-- 上 -->
            <TableRow 
                android:layout_width="fill_parent"
   				android:layout_height="0dp"
   				android:layout_weight="1"
   				android:gravity="center_horizontal"
                >
   
			<LinearLayout 
			    android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
			    >
			     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你好，太原!"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />
			    
			</LinearLayout>
                   
            </TableRow>
            <TableRow 
                android:layout_width="fill_parent"
   				android:layout_height="0dp"
   				android:layout_weight="1"
   				android:gravity="center_horizontal"
                >
                <RelativeLayout 
                    android:id="@+id/rlLoginWeiXin"
                    android:layout_width="fill_parent"
   					android:layout_height="match_parent"
   					android:gravity="center"
                    >
                     <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_below="@+id/ivLoginWeixin"
			            android:layout_centerHorizontal="true"
			            android:text="微信登录"
			            android:textColor="#ffffff"
			            android:textSize="14dp" />
                    <ImageView
                        android:id="@+id/ivLoginWeixin"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:src="@drawable/dengluyemianweixin" />
                </RelativeLayout>
            </TableRow>
            <!-- 中 -->
            <TableRow 
                android:layout_width="fill_parent"
   				android:layout_height="0dp"
   				android:layout_weight="1"
   				android:gravity="center"
                >
                <RelativeLayout 
                    android:layout_width="fill_parent"
   					android:layout_height="match_parent"
                    >
                     <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:layout_centerVertical="true"
			            android:text="使用城邦账号登录"
			            android:textColor="#ffffff"
			            android:textSize="14sp" />
                    <ImageView
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:layout_centerVertical="true"
			            android:src="@drawable/dengluyemianxiantiao" />
                </RelativeLayout>
               
            </TableRow>
            <!-- 下-->
            <TableRow 
                android:layout_width="match_parent"
   				android:layout_height="0dp"
   				android:layout_weight="3"
   				android:gravity="center_horizontal"
                >
                <RelativeLayout 
                    android:id="@+id/llLoginPhone"
                    android:layout_width="fill_parent"
   					android:layout_height="wrap_content"
   					android:layout_marginTop="0dp"
                    >
                    <ImageView
                        android:id="@+id/ivLoginPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/dengluyemiandiban" />
                    <TextView
			            android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_centerHorizontal="true"
		                android:layout_centerVertical="true"
			          	android:text="通过手机号登陆"
		                android:textColor="#fddc43"
		                android:textSize="20sp" />
                </RelativeLayout>
            </TableRow>
            
        </TableLayout>
        
    </LinearLayout>
    
    	<ImageView
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:src="@drawable/dengluyemianxiantiao2" />
    <!-- end -->
    <LinearLayout 
        android:id="@+id/llLoginProblem"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:gravity="center"
        >
       	 	<TextView
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:text="登录遇见问题"
 			    android:textColor="#ffffff"
 			    android:textSize="14dp" />
    </LinearLayout>
   

</LinearLayout>